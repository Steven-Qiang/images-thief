{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "updater:default",
    "core:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "/**"
        }
      ]
    },
    "opener:allow-open-url",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "fs:default",
    "fs:allow-write-text-file",
    "fs:allow-create"
  ]
}